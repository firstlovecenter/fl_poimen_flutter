{
  "name": "poimen-api-backend",
  "version": "0.5.31",
  "description": "API app for FLC Pastoral Care",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:dev": "./node_modules/.bin/nodemon --watch src --ext js,ts,graphql --delay 3 --exec babel-node src/index.js --extensions '.js,.ts'",
    "prebuild": " cd src/resolvers && tsc",
    "build": "babel src --out-dir build && shx cp .env build 2>/dev/null || : && shx cp -r src/schema build",
    "now-build": "babel src --out-dir build && shx cp -r src/schema build",
    "start": "npm run build && node build/index.js"
  },
  "author": "John-Dag Addy",
  "license": "MIT",
  "eslintConfig": {
    "plugins": [
      "@typescript-eslint",
      "no-relative-import-paths",
      "import"
    ],
    "rules": {
      "import/no-unresolved": "off",
      "no-console": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "no-relative-import-paths/no-relative-import-paths": "off"
    }
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@jaedag/admin-portal-api-core": "^1.0.16",
    "@jaedag/admin-portal-types": "^1.0.15",
    "@neo4j/graphql": "^3.6.0",
    "@neo4j/graphql-plugin-auth": "^2.1.0",
    "apollo-server": "^3.5.0",
    "apollo-server-lambda": "^3.5.0",
    "csv-parse": "^5.0.3",
    "dotenv": "^10.0.0",
    "graphql": "^16.6.0",
    "neo4j-driver": "^5.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.17.10",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.17.7",
    "@babel/runtime-corejs3": "^7.9.2",
    "babel-plugin-auto-import": "^1.0.5",
    "babel-plugin-module-resolver": "^4.0.0",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.15",
    "shx": "^0.3.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
